{
  "version": "1.0.0-*",
  "authors": [ "Gilles Zunino" ],
  "description": "Microsoft Azure Style Role Based Access Control (RBAC) library",

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "System.Security.Claims": "4.3.0"
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  },

  "buildOptions": {
    "define": [ "NETCORE" ],
    "outputName": "Portier.Authorization",
    "debugType": "portable",
    "compile": [
      "**/*.cs",
      "../Portier.Authorization/*.cs"
    ]
  }
}
